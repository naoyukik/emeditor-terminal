root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.rs]
max_line_length = 100

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.yaml,*.yml,*.json}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.ps1]
indent_size = 4
tab_width = 4
indent_style = space
charset = utf-8
